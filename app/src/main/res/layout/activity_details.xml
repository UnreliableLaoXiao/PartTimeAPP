<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#dfede5e5"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/likeblue"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="返回"
                android:id="@+id/user_back"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="兼职详情"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="20dp"
                    android:src="@drawable/tdcode"
                    android:id="@+id/tdcode"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:src="@drawable/collecte"
                    android:id="@+id/collecte"
                    android:layout_height="20dp" />

                <ImageView
                    android:layout_marginLeft="10dp"
                    android:layout_width="20dp"
                    android:id="@+id/message_chat"
                    android:src="@drawable/messages"
                    android:layout_marginRight="10dp"
                    android:layout_height="20dp" />


            </LinearLayout>

        </RelativeLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_marginBottom="50dp"
            android:layout_marginTop="45dp"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <include layout="@layout/layout_netbar"
                    android:id="@+id/net_bar"
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/netbar_height" />

            </LinearLayout>



        </androidx.core.widget.NestedScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_alignParentBottom="true"
            android:background="#FFF5F5F7"
            android:weightSum="3"
            android:layout_height="50dp">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:text="微聊"
                android:id="@+id/weichat"
                android:textSize="12sp"
                android:gravity="center"
                android:drawableTop="@drawable/chat"
                android:layout_height="match_parent" />

            <Button
                android:layout_width="0dp"
                android:layout_weight="2"
                android:text="报名参加"
                android:id="@+id/submit_send"
                android:background="#99FF0000"
                android:textColor="#FFFFFF"
                android:layout_height="match_parent" />

        </LinearLayout>
    </RelativeLayout>
</layout>
