<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="25dp"
    android:background="#fdfdfe"
    >

    <TextView
        android:layout_width="wrap_content"
        android:text="遗忘并不可怕"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#aa000000"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="100dp"
        android:layout_height="wrap_content">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.schoolpartime.schoolpartime.weight.ClearEditText
                android:layout_width="match_parent"
                android:hint="账号"
                android:inputType="text"
                android:maxLength="10"
                android:id="@+id/et_fg_username"
                android:layout_height="50dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.schoolpartime.schoolpartime.weight.ClearEditText
                android:layout_width="match_parent"
                android:hint="验证密码"
                android:maxLength="4"
                android:id="@+id/et_fg_psw_3"
                android:inputType="number"
                android:layout_height="50dp" />

        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <com.schoolpartime.schoolpartime.weight.ClearEditText
                android:layout_width="match_parent"
                android:hint="新密码"
                android:maxLength="4"
                android:id="@+id/et_fg_psw"
                android:inputType="number"
                android:layout_height="50dp" />

        </android.support.design.widget.TextInputLayout>

        <Button
            android:layout_width="match_parent"
            android:background="@drawable/login_bt_type"
            android:layout_marginTop="20dp"
            android:id="@+id/bt_rg_submit"
            android:text="注册"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:enabled="false"
            android:layout_height="50dp" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:textColor="#838384"
        android:layout_alignParentBottom="true"
        android:textSize="16sp"
        android:text="返回登录"
        android:id="@+id/tv_fg_login"
        android:layout_height="wrap_content" />

</RelativeLayout>
