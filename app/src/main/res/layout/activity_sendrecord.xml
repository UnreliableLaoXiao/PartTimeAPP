<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:background="#dfede5e5"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/likeblue"
            android:layout_height="45dp">

            <TextView
                android:layout_width="wrap_content"
                android:text="返回"
                android:id="@+id/user_back"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="投递记录"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:text="清空记录"
                android:id="@+id/user_change"
                android:layout_centerVertical="true"
                android:layout_margin="10dp"
                android:layout_alignParentRight="true"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <include layout="@layout/layout_netbar"
            android:id="@+id/net_bar"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="@dimen/netbar_height" />


        <com.google.android.material.tabs.TabLayout
            android:layout_width="match_parent"
            app:tabIndicatorColor="#ADBE107E"
            style="@style/MyTablayoutstyle"
            android:id="@+id/tab"
            app:tabMaxWidth="0dp"
            app:tabGravity="fill"
            app:tabMode="fixed"
            android:layout_height="wrap_content" />

        <androidx.viewpager.widget.ViewPager
            android:layout_width="match_parent"
            android:id="@+id/viewpager"
            style="@style/MyTablayoutstyle"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>
