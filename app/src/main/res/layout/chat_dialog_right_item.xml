<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tv_chat_me_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/iv_chat_imagr_right"
        android:background="@drawable/shape_chat"
        android:gravity="center_vertical"
        android:padding="5dp"
        android:minHeight="40dp"
        android:text="的关到小黑屋" />

    <com.schoolpartime.schoolpartime.weiget.image.HeiCircleImageView
        android:id="@+id/iv_chat_imagr_right"
        android:layout_width="40dp"
        android:layout_margin="8dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:src="@drawable/people" />

</RelativeLayout>