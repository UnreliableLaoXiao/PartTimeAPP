<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="handler"
            type="com.schoolpartime.schoolpartime.listener.IntentOnClickListener"/>
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="ExtraText">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            android:id="@+id/card"
            android:background="#FFFFFF"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_margin="10dp"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="110dp"
                    android:text="点击登录"
                    android:layout_marginTop="3dp"
                    android:id="@+id/tv_login"
                    android:onClick="@{handler::onClick}"
                    android:textSize="16sp"
                    android:textColor="#ee00aa"
                    android:layout_marginLeft="20dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="10dp"
                    android:id="@+id/go_show"
                    android:text="开启我的挣钱之旅"
                    android:layout_height="wrap_content" />
            </LinearLayout>

        </androidx.cardview.widget.CardView>


       <Button
           android:layout_width="100dp"
           android:layout_alignParentRight="true"
           android:layout_marginTop="20dp"
           android:id="@+id/bt_into_boss"
           android:visibility="visible"
           android:text="@string/imboss"
           android:background="@drawable/bt_into_boss"
           android:layout_height="30dp" />

    </RelativeLayout>


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_margin="5dp"
            app:cardCornerRadius="4dp"
            android:visibility="gone"
            android:id="@+id/boss"
            android:layout_height="wrap_content">

            <LinearLayout
                android:padding="10dp"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:weightSum="3"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/home_1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/addepople"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:drawableTop="@drawable/home_1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/requestarr"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/bossinfo"
                    android:drawableTop="@drawable/home_1"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <ListView
            android:layout_width="match_parent"
            android:id="@+id/list_user"
            android:layout_below="@id/card"
            android:dividerHeight="10dp"
            android:divider="#00000000"
            android:layout_margin="5dp"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>
